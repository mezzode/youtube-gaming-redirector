{
    "manifest_version": 2,

    "name": "Youtube Gaming Redirector",
    "description": "This extension redirects Youtube links to Youtube Gaming where possible.",
    "version": "0.2",

    "icons": { "512": "icon512.png"},

    "permissions": [
        "storage",
        "tabs",
        "<all_urls>"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}
