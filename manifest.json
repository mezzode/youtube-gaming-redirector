{
    "manifest_version": 2,

    "name": "Youtube Gaming Redirector",
    "description": "This extension redirects Youtube links to Youtube Gaming where possible.",
    "version": "0.2",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "exclude_matches": ["https://www.youtube.com/*"],
            "js": ["Youtube_Gaming_Linker.user.js"]
        },
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["Youtube_Gaming_Redirect.user.js"]
        },
        {
            "matches": ["https://feedly.com/*"],
            "js": ["jquery-2.1.4.min.js","Youtube_Gaming_Feedly.user.js"]
        }
    ],

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}
